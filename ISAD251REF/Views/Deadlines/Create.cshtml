@model ISAD251REF.Models.Deadlines

@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
</head>
<body>

    <h4>Deadlines</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Subject</label>
                    <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                </div>
                <div class="form-group">
                    <label class="control-label">Deadline Type</label>
                    <select asp-for="DeadlineTypeId" class="form-control" asp-items="ViewBag.DeadlineTypeId"></select>
                </div>
                <div class="form-group">
                    <label class="control-label">Deadline Date</label>
                    <input asp-for="DeadlineDate" class="form-control" />
                    <span asp-validation-for="DeadlineDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Deadline Notes</label>
                    <input asp-for="DeadlineNotes" class="form-control" />
                    <span asp-validation-for="DeadlineNotes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</body>
</html>
