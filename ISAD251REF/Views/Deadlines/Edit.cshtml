@model ISAD251REF.Models.Deadlines

@{
    ViewData["Title"] = "Home Page";
}


<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Edit</title>
</head>
<body>

    <h4>Deadlines</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="DeadlineId" />
                <div class="form-group">
                    <label asp-for="SubjectId" class="control-label"></label>
                    <select asp-for="SubjectId" class="form-control" asp-items="ViewBag.SubjectId"></select>
                    <span asp-validation-for="SubjectId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeadlineTypeId" class="control-label"></label>
                    <select asp-for="DeadlineTypeId" class="form-control" asp-items="ViewBag.DeadlineTypeId"></select>
                    <span asp-validation-for="DeadlineTypeId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeadlineDate" class="control-label"></label>
                    <input asp-for="DeadlineDate" class="form-control" />
                    <span asp-validation-for="DeadlineDate" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DeadlineNotes" class="control-label"></label>
                    <input asp-for="DeadlineNotes" class="form-control" />
                    <span asp-validation-for="DeadlineNotes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <script>
            var returnurl = document.referrer;
            if (returnurl != null)
            {
                document.write('<a href=\'' + document.referrer + '\';">Back to List</a>');

            }

            else {
                document.write('<a href="/Home/Index" class = "elements">Back to List</a>');
            }


        </script>
    </div>

</body>
</html>
